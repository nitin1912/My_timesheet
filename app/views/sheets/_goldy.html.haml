%tr{id: "selection_#{@@key}"}
  %td#fields
    = select_tag("client_list_id_#{@@key}", options_for_select(ClientList.client_list.collect {|c| [c.name, c.id]}), |
      data: {                                                                                                        |
      remote: true,                                                                                                  |
      url: url_for(action: :for_client, id: "client_list_id_#{@@key}")}, :prompt => 'select client')            |
    %br/
  %td#fields
    = select_tag( "project_id_#{@@key}",'', :prompt => 'select project')
    %br/
  %td#fields
    = select_tag("activity_id_#{@@key}", options_for_select(Activity.list.collect {|c| [c.name, c.id] }), :prompt => 'select activity')
    %br/
  %td#fields
    = text_field_tag "task_#{@@key}", '', size: 15
    %br/
  %td#fields
    = text_field_tag "date_#{@@key}", '', :class => 'datepicker'
    %br/
  %td#fields
    = time_select "in_time_#{@@key}",  '', :minute_step => 15 , :default => {hour: "", minute: ""}
    %br/
  %td#fields
    = time_select "out_time_#{@@key}", '', :minute_step => 15, :default => {hour: "", minute: ""}
    %br/
  %td#fields
    = text_field_tag "remarks_#{@@key}", '', size: 20
  %td{id: "delete_#{@@key}"}
