    <td><%= display_error_error(:name) %></td>
  </tr>
 
  <tr class="field">
    <td><%= f.label :code, "Code" %></td>
    <td><%= f.text_field :code, size: 20  %></td>    
    <td><%= display_error_error(:code) %></td>
  </tr>
</table>

<div class="action">
  <%= f.submit class: 'button' %>
</div>
<% end %>

