<tr id="selection">
      <td id ="fields">
        <%= select_tag("status", options_for_select([["New", "new"], ["Accepted", "accepted"], ["Rejected", "rejected"], ["Submitted", "submitted"] ], :selected => params["status"]) )%>
      </td>
      <td id="fields">
         <%= select_tag("client_list_id", options_for_select(ClientList.client_list.collect {|c| [c.name, c.id]}, :selected => params["client_list_id"]),
            data: { 
              remote: true,
              url: url_for(action: :for_report, id: "client_list_id")}, :prompt => 'select client')  %><br />  
      </td>

      <td id="fields">
        <%= select_tag("project_id", options_for_select(Project.where(:client_list_id=> params["client_list_id"]).collect{|p| [p.name, p.id]}, :selected => params["project_id"]), :prompt => 'select project') %>
      </td>

      <td id="fields">
        <%= select_tag("activity_id", options_for_select(Activity.list.collect {|c| [c.name, c.id] },:selected => params["activity_id"]), :prompt => 'select activity') %><br />
      </td>

  
      <td id="fields">
        <%= text_field_tag "from", params["from"], :class => 'datepicker' %><br />
      </td>
      <td id="fields">
        <%= text_field_tag "to", params["to"], :class => 'datepicker' %><br />
      </td>
    </tr>
