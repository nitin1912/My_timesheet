<h2>Change your password</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
 
  <%= f.hidden_field :reset_password_token %>
<table>
  <tr>
    <td><%= f.label :password, "New password" %><br/>
        <%= f.password_field :password, autofocus: true, autocomplete: "off" %></td>
    <td class ="error"><%= devise_error_messages(:password) %></td>
  </tr>

  <tr>
    <td><%= f.label :password_confirmation, "Confirm new password" %><br/>
        <%= f.password_field :password_confirmation, autocomplete: "off" %></td>
    <td class ="error"><%= devise_error_messages(:password_confirmation) %></td>
  </tr>
</table>

<div><%= f.submit "Change my password" %></div>
<br />
<% end %>

<%= render "devise/shared/links" %>
