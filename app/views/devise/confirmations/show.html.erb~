<h2>Account Confirmation</h2>
<%= form_for(resource, :as => resource_name, :url => confirm_path(resource_name),html: { method: :put }) do |f| %>
<%= f.hidden_field :confirmation_token, :value => @original_token %>  
<table>
  <tr>
    <td><%= f.label :password , 'New Password'%></td>
    <td><%= f.password_field :password %></td>
    <td class="error"><%= devise_error_messages(:password)%></td>
  </tr>
  <tr>
    <td><%= f.label :password_confirmation %></td>
    <td><%= f.password_field :password_confirmation, :required => true %></td>
    <td class="error"><%= devise_error_messages(:password_confirmation) %></td>
  </tr>

</table>
<div>
  <%= f.submit   %>
  </div>
<% end %>
