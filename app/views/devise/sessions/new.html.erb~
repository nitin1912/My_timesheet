  <section class="container">
    <div class="login">
      <h1>Login to Timesheet</h1>
      <%= form_for(resource, as: resource_name, url: login_path ) do |f| %>
        <p><%= f.text_field :login, :placeholder=> "Username or Email" %></p>
        <p><%= f.password_field :password, autocomplete: "off", :placeholder=> "password" %></p>
    
        <% if devise_mapping.rememberable? %>
        <p class ="remember_me">
          <label><%= f.check_box :remember_me  %>
            <%= f.label :remember_me,"remember me on this computer" %>
          </label>
        </p>
        <% end %>
       
        <p><%= f.submit "Login", :class => "submit" %></p>
      <% end %>
    </div>
    <div class="login-help">
      <p>New User?<%=  link_to "Sign up", new_registration_path(resource_name) %></p>
      <p>Forget your Password?<%= link_to "click here to reset", forgot_password_path %></p>
    </div>
  </section>

